<li class='card'>
	<picture class='card-image'>
		<slot name='image' />
	</picture>

	<div class='card-title'>
		<h3>
			<slot name='title' />

			<span class='card-tags'>
				<slot name='tag' />
			</span>
		</h3>

		<p class='card-category'>
			<slot name='category' />
		</p>
	</div>

	<div class='card-links'>
		<slot name='link' />
	</div>

	<p class='card-desc'>
		<slot name='description' />

		<br /><br />

		<button>more</button>
	</p>

	<div class='card-more'>
		<slot name='more' />
	</div>
</li>
